<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:padding">0dip</item>
         <item name="android:textColor">#191919</item>
        
    </style>
    
    <style parent="text" name="MangaTitleStyle">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        
    </style>
    
    <style parent="text" name="MangaDescriptionStyle">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
        
    </style>
    
    <style parent="text" name="MangaDateStyle">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#b9bcc9</item>
        <item name="android:layout_alignParentRight">true</item>
      
    </style>
    
</resources>
